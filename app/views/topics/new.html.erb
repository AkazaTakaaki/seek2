<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">人探しを依頼する</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <label for="tag">どんな人を探したい？</label>
            <%= f.text_field :title, class: 'form-control',placeholder: "例)恋人、犯罪者、家出、友人、親戚、妻、夫"%>
          </div>
          <div class="form-group">
            <label for="name-search">探したい人の名前</label>
            <%= f.text_field :target, class: 'form-control',placeholder: "例）山田太郎、鈴木花子"%>
          </div>
          <div class="form-group">
            <label for="date_search">いなくなった時期</label>
            <%= f.date_field :date_time, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="place_search">いなくなった場所</label>
            <%= f.text_field :place_search, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="reason">探している理由</label>
            <%= f.text_area :description, class: 'form-control',placeholder: "なぜ探しているかをご記入ください。" %>
          </div>

            <label for="image">本人写真等参考画像</label>
            <div class="form-group">
            <label class="col-xs-3 col-sm-3 col-md-3 control-label">画像１<span style="font-size:0.7em;color:red"> 500kbまで</span></label>
            <%= f.file_field :image1 %>
            <label class="col-xs-3 col-sm-3 col-md-3 control-label">画像２<span style="font-size:0.7em;color:red"> 500kbまで</span></label>
            <%= f.file_field :image2 %>
            <label class="col-xs-3 col-sm-3 col-md-3 control-label">画像３<span style="font-size:0.7em;color:red"> 500kbまで</span></label>
            <%= f.file_field :image3 %>

          </div>
          <div class="form-group">
            <label for="price">謝礼金（円）</label>
            <%= f.number_field :price, class: 'form-control',placeholder: "例）50000"%>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
